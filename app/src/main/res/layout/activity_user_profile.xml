<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".UserProfile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/user_profile_toolbar"
                layout="@layout/app_bar_layout"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_profile_pic"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:src="@drawable/profile_placeholder"/>

            <TextView
                android:id="@+id/user_profile_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username"
                android:layout_below="@id/user_profile_pic"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/user_profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile Name"
                android:layout_below="@id/user_profile_username"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:textStyle="bold"/>



            <TextView
                android:id="@+id/user_profile_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Country"
                android:layout_below="@id/user_profile_name"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/user_profile_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I'm new to Cookbook, but I'm using this app to learn new recipes. I look forward to meeting new people here."
                android:layout_below="@id/user_profile_country"
                android:layout_marginTop="65dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/user_profile_dish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My favorite dish is: Steak &amp; Eggs"
                android:layout_below="@id/user_profile_status"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/user_profile_cuisine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My favorite cuisine is: Japanese"
                android:layout_below="@id/user_profile_dish"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:textStyle="bold"/>
            
            <Button
                android:id="@+id/user_profile_send_friend_req"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_profile_cuisine"
                android:text="Send Friend Request"
                android:textSize="15dp"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"/>
            <Button
                android:id="@+id/user_profile_decline_friend_req"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_profile_send_friend_req"
                android:text="Decline Friend Request"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

    </ScrollView>
</RelativeLayout>