<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Profile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/profile_toolbar"
                layout="@layout/app_bar_layout"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/my_profile_pic"
                android:layout_width="300sp"
                android:layout_height="300sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100sp"
                android:src="@drawable/profile_placeholder"/>

            <TextView
                android:id="@+id/my_profile_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username"
                android:layout_below="@id/my_profile_pic"
                android:layout_marginTop="15sp"
                android:layout_marginRight="10sp"
                android:layout_marginLeft="10sp"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/my_profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile Name"
                android:layout_below="@id/my_profile_username"
                android:layout_marginTop="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginLeft="10sp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"/>



            <TextView
                android:id="@+id/my_profile_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Country"
                android:layout_below="@id/my_profile_name"
                android:layout_marginTop="15sp"
                android:layout_marginRight="10sp"
                android:layout_marginLeft="10sp"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/my_profile_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I'm new to Cookbook, but I'm using this app to learn new recipes. I look forward to meeting new people here."
                android:layout_below="@id/my_profile_country"
                android:layout_marginTop="65sp"
                android:layout_marginRight="10sp"
                android:layout_marginLeft="10sp"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/my_profile_dish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My favorite dish is: Steak &amp; Eggs"
                android:layout_below="@id/my_profile_status"
                android:layout_marginTop="15sp"
                android:layout_marginRight="10sp"
                android:layout_marginLeft="10sp"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/my_profile_cuisine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My favorite cuisine is: Japanese"
                android:layout_below="@id/my_profile_dish"
                android:layout_marginTop="15sp"
                android:layout_marginRight="10sp"
                android:layout_marginLeft="10sp"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textStyle="bold"/>
            
            <Button
                android:id="@+id/my_profile_posts"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30sp"
                android:layout_marginTop="50sp"
                android:layout_below="@id/my_profile_cuisine"
                android:text="Posts"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/my_profile_friends"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30sp"
                android:layout_marginTop="50sp"
                android:layout_below="@id/my_profile_cuisine"
                android:text="Friends"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </RelativeLayout>
        
    </ScrollView>

</RelativeLayout>